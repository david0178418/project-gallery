{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@client/*": [
        "src/client/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@server/*": [
        "src/server/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@/*": [
        "./*",
          "src/*",
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/api/v0/user./registerts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
